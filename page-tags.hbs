{{!< default}}

<script src="{{asset "main/js/showsidebar.js"}}"></script>

{{#post}}

<section>
    <header class="main content">
        <h1>{{title}}</h1>
    </header>

    <section class="tags">
    {{#get 'tags' limit='all' include='count.posts' order='count.posts desc'}}
    {{#foreach tags}}
        <div class="tag-box">
            <a href="{{ url }}" class="image fit">
                <img src="{{img_url feature_image}}" alt="{{name}}">
                <h2>{{ name }} <small>({{ count.posts }})</small></h2>
            </a>
        </div>
    {{/foreach}}
    {{/get}}
    </section>
</section>

